        <!-- 검색 버튼 동작 -->
            <script type="text/javascript">
                document.getElementById("studentSearch").addEventListener('click', function () {
                    console.log($('#monthpicker').val());                    
                    console.log($("#studentList option:selected").val());

                    var daypicked = $('#monthpicker').val();
                    var slideday = daypicked.split('-');
                    var year = slideday[0];
                    var month = slideday[1];
                    var usn = $("#studentList option:selected").val();

                    $.ajax({
                        method: "post",
                        url: "/attendance/myattend/",
                        dataType: 'json',
                        data: {                  
                            "YEAR" : slideday[0],
                            "MONTH" :slideday[1],
                            "USN" : $("#studentList option:selected").val()
                        }
                    }).done(function (msg) {
                        var html = '';                        
                        for(var i = 0; i<msg.length; i++){   
                            html += "<tr>";
                            html += "<td id = 'date' >"+msg[i]['DATE']+"</td>";
                            if(msg[i]['GTW'] == null){
                                html += "<td id = 'gtw' >"+ " - "+"</td>";
                            }else{
                                html += "<td id = 'gtw' >"+msg[i]['GTW']+"</td>";
                            }
                            
                            if(msg[i]['GTH'] == null){
                                html += "<td id = 'gth' >"+ " - " +"</td>";
                            }else{
                                html += "<td id = 'gth' >"+msg[i]['GTH']+"</td>";
                            }
                            
                            html += "<td id = 'state' >"+msg[i]['STATE']+"</td>";

                            if(msg[i]['REASON'] == null){
                                html += "<td id = 'reason' >"+ " 미등록 " +"</td>";
                            }else{
                                html += "<td id = 'reason' >"+msg[i]['REASON']+"</td>";
                            }
                            
                            //$("#dataTable").DataTable();                           
                        }     
                                       
                        $("#userAttendList").html(html);
                        });
                    });
            </script> 


        <script>
          function change($val){
            var html ='';
            if($val == "대구 ICT"){              
              html += "<option value = '0'>미정</option>";
              html += "<option value = '1'>소프트웨어</option>";
              html += "<option value = '2'>하드웨어</option>";
            }else{
              html += "<option value = '3'>미정</option>";
              html += "<option value = '4'>영상처리</option>";
              html += "<option value = '5'>머신러닝</option>";
            }
            $("#subList").html(html);
          }
        </script>

        <!-- Button Action -->
        <script type="text/javascript">
          document.getElementById("registerb").addEventListener('click', function(){
            // Check the value are all filled
            var firstName = $('input[name = firstName]').val();
            var lastName = $('input[name = lastName]').val();
            var inputPassword = $('input[name = inputPassword]').val();
            var confirmPassword = $('input[name = confirmPassword]').val();
            var Birth = $('input[name = Birth]').val();
            var gender = $('input[name=gender]:checked').val();
            var phone = $('input[name = phone]').val();
            var univ = $('input[name = univ]').val();
            var degree = $('input[name = degree]').val();
            var major = $('input[name = major]').val();            
            var minior = $('input[name = minior]').val();
            var subclass = $("#subList option:selected").val();   

            if(firstName == ""){
              alert("성을 입력해주세요");
            }else if(lastName == ""){
              alert("이름을 입력해주세요");
            }else if(inputPassword == ""){
              alert("비밀번호를 입력해주세요");
            }else if(confirmPassword == ""){
              alert("비밀번호 재확인란을 입력해주세요");
            }else if(Birth == ""){
              alert("생일을 입력해주세요");
            }else if(inputPassword != confirmPassword){
              alert("비밀번호를 재 확인해주세요");
            }else if(gender == ""){
              alert("성별을 입력해주세요");
            }else if(phone == ""){
              alert("전화번호를 입력해주세요");
            }else if(univ == ""){
              alert("대학을 입력해주세요");
            }else if(degree == ""){
              alert("학위를 선택해주세요");
            }else if(major == ""){
              alert("전공을 입력해주세요");
            }else if(minior == ""){
              alert("부전공을 입력해주세요");
            }else if(subclass == ""){
              alert("Hustar 분반을 선택해주세요");
            }else{
              var name = firstName.concat("", lastName);
              
              //send json
              $.ajax({
              method: "POST",
              url: "/signup",
              data: {
                "EMAIL": $('input[name = email]').val(),                
                "NAME": name,
                "PASSWORD": inputPassword,
                "BRITH": Birth,
                "GENDER": gender,
                "PHONE": phone,
                "UNIV" : univ,
                "MAJOR" : major,
                "SUBMAJOR" : minior,
                "DEGREE" : degree,
                "CLASS" : subclass
              }
              }).done(function( msg ) {
                  //If sign_up success, show up the sign in page
                  if(msg.message == 0){
                    alert("Hustar가 되신것을 환영합니다!!");
                    alert(Birth);
                    location.href = "/";
                  }
                  if(msg.message == 1){
                    alert("이미 Hustar 이신데요???");
                    location.href = "/";
                  }
                  if(msg.message == 2){
                    alert("서버 Error, 회원가입을 다시 해주세요");
                    location.href = "/sign_up";
                  }
              });         
            }
          });       
        </script>
